{
  "compilerOptions":{
      /*Language and Environment*/
      "target":"es6",

      /* Modules */
      "module":"commonjs",
      //"rootDirs": [],

      /* Interop Constraints */
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,

      /* Type Checking */
      "strict": true,

      /* Completeness */
      "skipLibCheck": true,

      /* Emit */
      //"outFile": "./",
      "outDir": "./build",
  }
}
